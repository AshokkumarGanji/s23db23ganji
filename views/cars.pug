  - var cars=[{car_model:"Audi",car_year:"2019",car_price:2000},{car_model:"GMC",car_year:"2022",car_price:3000},{car_model:"Jeep",car_year:"2020",car_price:1000}]
  div(class="container-fluid")
  div(class="row")
   each f,index  in cars
    div(class="col-sm-2" onclick =`buy(${index})`) #{f.car_model}, #{f.car_year}, #{f.car_price}
    script.
        function buy(a)
        {
            alert(`You purchased Item ${a+1}`)
        } 